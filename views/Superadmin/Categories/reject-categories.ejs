    document.getElementById("uploadbtn").addEventListener("click", () => {
      var imgUrl = document.getElementById('myImg').src;

      if (!firebase.apps.length) {
        firebase.initializeApp(firebaseConfig);
      }

      // Set the maximum image size to 5 MB
      const maxImageSize = 5 * 1024 * 1024; 

      // Get the file extension of the selected image
      const imgUrlParts = imgUrl.split(",");
    const data = imgUrlParts[1];
    const mimeType = imgUrlParts[0].split(":")[1].split(";")[0];
    const fileExtension = mimeType.split("/")[1];

      // Check if the image size is greater than the maximum size
      if (imgUrl.length > maxImageSize) {
        alert('The selected image is too large. Please choose an image smaller than 5 MB.');
        return;
      }
      console.log(fileExtension.toLowerCase())

      // Check if the file type is an image
      if (!['jpg', 'jpeg', 'png', 'gif'].includes(fileExtension.toLowerCase())) {
        alert('The selected file is not an image. Please choose an image file with a .jpg, .jpeg, .png, or .gif extension.');
        return;
      }

      fetch(imgUrl)
        .then(response => response.blob())
        .then(blob => {
          var storageRef = firebase.storage().ref();
          var timestamp = new Date().getTime();
          var imageName = 'image_' + timestamp + '.jpg';
          var imageRef = storageRef.child(imageName);
          var metadata = { contentType: 'image/jpeg' };
          var uploadTask = imageRef.put(blob, metadata);

          uploadTask.on('state_changed', null, null, function() {
            uploadTask.snapshot.ref.getDownloadURL().then(function(downloadURL) {
              var imageUrl = downloadURL;
              console.log(imageUrl);

              $.ajax({
                url: '/categories-image-upload',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({
                      id : document.getElementById("id").value,
                      image:imageUrl
                }),
                success: function(response) {
                    console.log("Success")
                    profileimg.src=imageUrl
                    document.getElementById("imageclosebtn").click()
                }
              });

            });
          });
        })
        .catch(error => {
          console.error('Error fetching image data:', error);
        });
    });
</script>
