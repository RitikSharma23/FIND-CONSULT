<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">

                <table id="state-saving-datatable" class="table activate-select dt-responsive nowrap w-100">
                    <thead>
                        <tr>
                            <th>Category Name</th>
                            <th>Image</th>
                            <th>Created At</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                
                    <tbody>

                        <% category.forEach(function(c) { %>
                            <tr>
                              <td><%= c.category_name %></td>
                              <td>
                                <img src="<%= c.image || 'https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_960_720.png'%>" alt="Profile" class="rounded-circle avatar-sm" height="1550px">
                              </td>
                                <td><%= c.created_at %></td>

                                <td>
                

                                    <span class="<%= c.status == 4 ? 'badge badge-soft-danger':'' %>"><%= c.status == 4 ? 'Rejected':'' %></span>
                                    <span class="<%= c.status == 1 ? 'badge badge-soft-info':'' %>"><%= c.status == 1 ? 'Verified':'' %></span>
                                    <span class="<%= c.status == 2 ? 'badge badge-soft-warning':'' %>"><%= c.status == 2 ? 'Pending':'' %></span>
                                    <span class="<%= c.status == 3 ? 'badge badge-soft-success':'' %>"><%= c.status == 3 ? 'New':'' %></span>
                                
                                </td>


                            <td>
                                <div class="btn-group mr-1 mt-2">
                                    <button type="button" class="btn btn-light dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Action <i class="mdi mdi-chevron-down"></i></button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item waves-effect waves-light" onclick="myFunction(<%= JSON.stringify(c) %>)">Edit</a>
                                        <button class="dropdown-item category-delete-alert" data-my-variable="<%= c.id %>">Delete</button>
                                        <button class="dropdown-item category-reject-alert" data-my-variable="<%= c.id %>" >Mark Reject</button>
                                        <button class="dropdown-item category-makepending-alert" data-my-variable="<%= c.id %>">Mark Pending</button>
                                        <button class="dropdown-item category-makenew-alert" data-my-variable="<%= c.id %>">Mark New</button>
                                        <button class="dropdown-item category-verify-alert" data-my-variable="<%= c.id %>">Mark Verified</button>
                                    </div>
                                </div>
                            </td>
                            </tr>
                        <% }) %>
        
             

                    </tbody>
                </table>
            </div> <!-- end card body-->
        </div> <!-- end card -->
    </div><!-- end col-->
</div>








