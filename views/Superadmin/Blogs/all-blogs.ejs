<%- contentFor('body') %>







<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">

                <table id="state-saving-datatable" class="table activate-select dt-responsive nowrap w-100">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Short description</th>
                            <th>Long description</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                
                    <tbody>

                        <% blogs.forEach(function(blog) { %>
                            <tr>
                              <td><%= blog.name %></td>
                              <td><%= blog.blogcategory %></td>
                              <td><%= blog.short_description %></td>
                              <td><%= blog.long_description %></td>
                            <td>
                                <div class="btn-group mr-1 mt-2">
                                    <button type="button" class="btn btn-light dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Action <i class="mdi mdi-chevron-down"></i></button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item waves-effect waves-light" onclick="myFunction(<%= JSON.stringify(blog) %>)">Edit</a>
                                        <button class="dropdown-item blogs-delete-alert" data-my-variable="<%= blog.id %>">Delete</button>
                                    </div>
                                </div>
                            </td>
                            </tr>
                        <% }) %>
        
             

                    </tbody>
                </table>
            </div> <!-- end card body-->
        </div> <!-- end card -->
    </div><!-- end col-->
</div>








<div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
      <div class="modal-content">
          <div class="modal-header">
              <h5 class="modal-title mt-0" id="myLargeModalLabel">blog Details</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">


              <div class="row">
                  <div class="col-md-4">
                      <div class="mb-3">
                          <label for="name" class="form-label">Blog Name</label>
                          <input type="text" class="form-control" id="name"
                              placeholder="Full name" value=""  required>
                          <input type="number" id="id" hidden>
                          <div class="valid-feedback">
                              Looks good!
                          </div>
                      </div>
                  </div>

                  <div class="col-md-4">
                      <div class="mb-3">


                        <div class="mb-3">
                            <label class="form-label">Single Select</label>
                            <select class="form-control select2" id="blogcategory">
                                <option value="0">Select</option>
                                    <% categories.forEach(function(b) { %>
                                    <option value="<%= b.id %>"><%= b.name %></option>
                                    <% }) %>
                            </select>
                        </div>
                      </div>
                  </div>

              </div>
              <div class="row">
                <div class="col-md-12">
                  <div class="mb-3">
                      <label for="created" class="form-label">Short description</label>
                      <input type="text" class="form-control" id="short_description"
                          placeholder="Created At" value="" >
                      <div class="valid-feedback">
                          Looks good!
                      </div>
                  </div>
                </div>
              <div class="row">
                <div class="col-md-12">
                    <div class="mb-3">
                        <label>Long description</label>
                        <div>
                            <textarea required class="form-control" id="long_description" rows="5"></textarea>
                        </div>
                    </div>
                </div>
                <div>
                    <button class="btn btn-primary blogs-btn-submitbtn" id="submitbtn">Update Blog</button>
  
                </div>
                
              </div>
 


          </div>
      </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->




<script>
  function myFunction(blog) {
    document.getElementById("id").value=blog.id
    document.getElementById("name").value=blog.name
    document.getElementById("short_description").value=blog.short_description
    document.getElementById("long_description").value=blog.long_description
    document.getElementById("blogcategory").value=blog.blog_category_id	
    const myModal = document.querySelector('.bs-example-modal-lg');
  const modal = new bootstrap.Modal(myModal);
  modal.show();
}

</script>

