function createDivWithImageAndButton(d) {
  const div = document.createElement('div');
  div.classList.add('col-md-2');

  const img = document.createElement('img');
  img.classList.add('rounded', 'me-2','uploadedimage');
  img.setAttribute('alt', '200x200');
  img.setAttribute('src', d);
  img.setAttribute('data-holder-rendered', 'true');
  img.height=100
  img.width=200

  const center = document.createElement('center');

  const button = document.createElement('button');
  button.classList.add('btn', 'btn-sm', 'btn-primary');
  button.innerHTML = '&#10005';

button.addEventListener('click', (event) => {
  event.target.parentNode.parentNode.parentNode.removeChild(event.target.parentNode.parentNode);
});

  center.appendChild(button);

  div.appendChild(img);
  div.appendChild(center);

  document.getElementById("imageprev").appendChild(div);

}


</script>





