    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Company Owner Details Details</h4>
            <div>
        <form class="custom-validation" action="/update-user" method="post" enctype="multipart/form-data">
                <div class="mb-4">
                  <span>Full Name</span>
                  <input type="text" id="aadharlink" name="aadharlink" hidden>
                  <input type="text" id="panlink" name="panlink"hidden>
