                    <input class="form-control" name="email" type="email" value="<%= users.email %>" placeholder="Email (Required)" required>
                </div>
                <div class="mb-4">
                  <span>Phone Number</span>
                    <input class="form-control" name="phone" type="phone" value="<%= users.phone %>" placeholder="Phone Number (Required)" required>
                </div>
                <div class="mb-4">
                  <span>Aadhar Card Number</span>
                    <input class="form-control" name="aadhar" type="number" value="<%= users.aadhar %>" placeholder="Aadhar Card Number (Required)" required>
                </div>
                <div class="mb-4">
                  <span>Pan Card Number</span>
                    <input class="form-control" name="pan" type="text" value="<%= users.pan %>" placeholder="Pan Card Number (Required)" required>
                </div>
                <div class="mb-4">
                  <span>Facebook</span>
                    <input class="form-control" name="facebook" type="text" value="<%= users.facebook %>" placeholder="Facebook Account">
                </div>
                <div class="mb-4">
                  <span>Instagram</span>
                    <input class="form-control" name="instagram" type="text" value="<%= users.instagram %>" placeholder="Instagram Account">
                </div>
                <div class="mb-4">
                  <span>Twitter</span>
                    <input class="form-control" name="twitter" type="text" value="<%= users.twitter %>" placeholder="Twitter Account">
                </div>
                <center>
                  <button type="submit" class="btn btn-success mb-4">Submit</button>
                </center>
              </form>
            </div>
        </div>
    </div>
</div>

    <div class="col">

            <div class="col-lg-12">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Aadhar Card (Required)</h4>
                  <p class="card-title-desc">Please Upload Aadhar Card </p>
                  <div class="input-group">
                    <input type="file" class="form-control " id="aadharFile">
                  </div>
                </div>
              </div>
            </div>
          
            <div class="col-lg-12">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Pan Card (Required)</h4>
                  <p class="card-title-desc">Please Upload Pan Card Details</p>
                  <div class="input-group">
                    <input type="file" class="form-control" id="panFile">
                  </div>
                </div>
              </div>
            </div>           
    </div>


</div>





<script>
var aadharFileInput = document.getElementById('aadharFile');
var panFileInput = document.getElementById('panFile');

aadharFileInput.addEventListener('change', function (event) {
  handleFileUpload(event.target.files[0], 'aadharlink');
});

panFileInput.addEventListener('change', function (event) {
  handleFileUpload(event.target.files[0], 'panlink');
});

</script>





<script>
$('form').submit(function(event) {
    event.preventDefault();

    var formData = $(this).serializeArray();
    var jsonData = {};
    formData.forEach(function(item) {
        jsonData[item.name] = item.value;
    });

    $.ajax({
        url: $(this).attr('action'),
        method: $(this).attr('method'),
        data: JSON.stringify(jsonData),
        contentType: 'application/json',
        success: function(response) {
            console.log(response.msg);

            if (!response.status) {
                erroralert(response.msg);
            }
            if (response.status) {
                successalert(response.msg);
            }

            if(response.status) location.reload()
        },
        error: function(xhr, status, error) {
            console.error(error);
        }
    });
});

</script>


